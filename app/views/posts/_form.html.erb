<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :timestamp %>
    <%= f.input :accomodation_place %>
    <%= f.input :no_of_people %>
    <%= f.input :twitter_handle_or_facebook_profile %>
    <%= f.input :mobile_number %>
    <%= f.input :source_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
