<%= form_for @post, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :timestamp, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :timestamp, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :accomodation_place, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :accomodation_place, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :no_of_people, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :no_of_people, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter_handle_or_facebook_profile, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :twitter_handle_or_facebook_profile, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mobile_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :mobile_number, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source_link, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :source_link, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  posts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
