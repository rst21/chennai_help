<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => Post %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:timestamp) %></dt>
      <dd><pre class="prettyprint"><%= @post.timestamp %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:accomodation_place) %></dt>
      <dd><pre class="prettyprint"><%= @post.accomodation_place %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:no_of_people) %></dt>
      <dd><pre class="prettyprint"><%= @post.no_of_people %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:twitter_handle_or_facebook_profile) %></dt>
      <dd><pre class="prettyprint"><%= @post.twitter_handle_or_facebook_profile %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mobile_number) %></dt>
      <dd><pre class="prettyprint"><%= @post.mobile_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_link) %></dt>
      <dd><pre class="prettyprint"><%= @post.source_link %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

